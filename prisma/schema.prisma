// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())

  ownedProjects  Project[] @relation("OwnedProjects")
  sharedProjects Project[] @relation("SharedProjects")

  createdTasks    Task[]     @relation("CreatedTasks")
  assignedTasks   Task[]     @relation("AssignedTasks")
  sharedTasks     Task[]     @relation("SharedTasks")
  logs            TaskLog[]  @relation("UserLogs")

  notificationSettings NotificationSettings?
}

model Project {
  id      String @id @default(uuid())
  name    String
  color   String // Hex code or generic color name
  ownerId String
  owner   User   @relation("OwnedProjects", fields: [ownerId], references: [id], onDelete: Cascade)

  sharedWith User[] @relation("SharedProjects")
  tasks      Task[]
  columns    KanbanColumn[]
  tags       Tag[]

  createdAt DateTime @default(now())
}

model KanbanColumn {
  id        String   @id @default(uuid())
  title     String
  order     Int      @default(0)
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  tasks     Task[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  importance  String   @default("Medium") // Low, Medium, High
  dueDate     DateTime?
  status      String   @default("TODO") // BACKLOG, TODO, IN_PROGRESS, REVIEW, DONE
  
  columnId    String?
  column      KanbanColumn? @relation(fields: [columnId], references: [id], onDelete: SetNull)

  // Removed completed boolean in favor of status

  isRecurring    Boolean   @default(false)
  recurrenceInterval String? // daily, weekly, monthly, yearly
  recurrenceWeekDays String? // 1,2,3,4,5,6,0 (Mon-Sun)
  recurrenceDayOfMonth Int?  // 1-31
  recurrenceEndDate DateTime?
  
  reminder    DateTime?

  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  creatorId   String
  creator     User     @relation("CreatedTasks", fields: [creatorId], references: [id])

  assigneeId  String?
  assignee    User?    @relation("AssignedTasks", fields: [assigneeId], references: [id])
  assigneeName String?

  sharedWith  User[]   @relation("SharedTasks")

  subtasks  SubTask[]
  logs      TaskLog[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tags        Tag[]
}

model Tag {
  id        String   @id @default(uuid())
  name      String
  color     String
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  tasks     Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([name, projectId])
}

model SubTask {
  id        String   @id @default(uuid())
  title     String
  description String?
  completed Boolean  @default(false)
  
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

model NotificationSettings {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  enabled     Boolean  @default(false)
  
  // Telegram Config
  telegramBotToken String?
  telegramChatId   String?
  
  // Schedule (HH:MM)
  mondayTime    String   @default("08:00")
  mondayEnabled Boolean  @default(true)
  tuesdayTime   String   @default("08:00")
  tuesdayEnabled Boolean @default(true)
  wednesdayTime String   @default("08:00")
  wednesdayEnabled Boolean @default(true)
  thursdayTime  String   @default("08:00")
  thursdayEnabled Boolean @default(true)
  fridayTime    String   @default("08:00")
  fridayEnabled Boolean  @default(true)
  saturdayTime  String   @default("09:00")
  saturdayEnabled Boolean @default(true)
  sundayTime    String   @default("09:00")
  sundayEnabled Boolean  @default(true)
  
  lastSentAt    DateTime?
}

model TaskLog {
  id        String   @id @default(uuid())
  content   String
  
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation("UserLogs", fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
